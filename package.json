{
  "name": "@arianrhodsandlot/eslint-config",
  "version": "0.9.1",
  "type": "module",
  "description": "A set of predefined ESLint config.",
  "main": "dist/umd/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/umd/index.cjs",
    "types": "./dist/types/index.d.ts"
  },
  "keywords": [
    "eslint",
    "eslint-config"
  ],
  "author": "arianrhodsandlot",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:esm": "swc src -d dist/esm --strip-leading-paths",
    "build:types": "tsc",
    "build:umd": "swc src -d dist/umd --strip-leading-paths -C module.type=umd -C module.importInterop=node --out-file-extension=cjs",
    "build": "conc npm:build:*",
    "lint": "eslint src",
    "test": "tsx --test --no-deprecation"
  },
  "devDependencies": {
    "eslint-config": "npm:@arianrhodsandlot/eslint-config@0.8.5",
    "@swc/cli": "0.3.10",
    "@swc/core": "1.4.8",
    "@tsconfig/node-lts": "20.1.2",
    "@types/eslint": "8.56.6",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/eslint-plugin-markdown": "2.0.2",
    "@types/eslint__js": "8.42.3",
    "@types/lodash": "4.17.0",
    "@types/node": "20.11.30",
    "concurrently": "8.2.2",
    "eslint": "8.57.0",
    "tsx": "4.7.1",
    "typescript": "5.4.3"
  },
  "dependencies": {
    "@eslint/js": "^8.57.0",
    "@next/eslint-plugin-next": "^14.1.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-love": "^43.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-markdown": "^4.0.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.1",
    "eslint-plugin-sonarjs": "^0.24.0",
    "eslint-plugin-unicorn": "^51.0.1",
    "get-tsconfig": "^4.7.3",
    "globals": "^14.0.0",
    "lodash": "^4.17.21",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "typescript-eslint": "^7.3.1"
  },
  "peerDependencies": {
    "eslint": "*"
  }
}
