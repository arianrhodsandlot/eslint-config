{
  "name": "@arianrhodsandlot/eslint-config",
  "description": "A set of predefined ESLint config.",
  "keywords": [
    "eslint",
    "eslint-config"
  ],
  "license": "MIT",
  "author": {
    "name": "arianrhodsandlot",
    "email": "theguidanceofawhitetower@gmail.com"
  },
  "repository": "arianrhodsandlot/eslint-config",
  "files": [
    "dist"
  ],
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js"
  },
  "scripts": {
    "build": "tsdown --no-fixed-extension",
    "dev": "eslint-config-inspector",
    "lint": "eslint src",
    "prepare": "simple-git-hooks",
    "test": "node --test tests/*.test.ts && tsc -p tsconfig.test.json",
    "test:update": "node --test-update-snapshots tests/*.test.ts"
  },
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint-react/eslint-plugin": "^2.4.0",
    "@eslint/compat": "^2.0.0",
    "@eslint/config-helpers": "^0.5.0",
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@intlify/eslint-plugin-vue-i18n": "4.1.0",
    "@next/eslint-plugin-next": "^16.1.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "es-toolkit": "1.43.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-diff": "^2.0.3",
    "eslint-plugin-es-x": "^9.3.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-perfectionist": "^5.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "eslint-plugin-tsdoc": "^0.5.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-vue": "^10.6.2",
    "eslint-plugin-vue-scoped-css": "^2.12.0",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "globals": "^16.5.0",
    "new-find-package-json": "^2.0.0",
    "prettier": "^3.7.4",
    "tailwind-csstree": "^0.1.4",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vue-eslint-parser": "^10.2.0"
  },
  "devDependencies": {
    "@arianrhodsandlot/release-kit": "0.1.12",
    "@eslint/config-inspector": "1.4.2",
    "@types/eslint": "9.6.1",
    "@types/node": "25.0.3",
    "eslint": "9.39.2",
    "jiti": "2.6.1",
    "lint-staged": "16.2.7",
    "react": "19.2.3",
    "simple-git-hooks": "2.13.1",
    "tsdown": "0.18.3",
    "vue": "3.5.26",
    "vue-i18n": "11.2.7",
    "zx": "8.8.5"
  },
  "peerDependencies": {
    "eslint": "*"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": false
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && node --run=build"
  },
  "lint-staged": {
    "*.?(m|c)@(j|t)s?(x)": "eslint --fix",
    "package.json": "pnpm dlx oxfmt package.json"
  },
  "packageManager": "pnpm@10.26.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver"
    ]
  }
}
