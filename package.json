{
  "name": "@arianrhodsandlot/eslint-config",
  "version": "0.12.1",
  "description": "A set of predefined ESLint config.",
  "keywords": [
    "eslint",
    "eslint-config"
  ],
  "license": "MIT",
  "author": "arianrhodsandlot",
  "type": "module",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/umd/index.cjs",
    "types": "./dist/types/index.d.ts"
  },
  "main": "dist/umd/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "conc npm:build:*",
    "build:esm": "swc src -d dist/esm --strip-leading-paths",
    "build:types": "tsc",
    "build:umd": "swc src -d dist/umd --strip-leading-paths -C module.type=umd --out-file-extension=cjs && tsx scripts/fix-cjs-require",
    "dev": "conc npm:dev:*",
    "dev:build": "pnpm build:esm -w",
    "dev:inspect": "eslint-config-inspector",
    "lint": "eslint src",
    "test": "tsx --test tests/*.test.ts"
  },
  "dependencies": {
    "@eslint/js": "^9.1.1",
    "@next/eslint-plugin-next": "^14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-compat": "^4.2.0",
    "eslint-plugin-diff": "^2.0.3",
    "eslint-plugin-es-x": "^7.6.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.3",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-markdown": "^4.0.1",
    "eslint-plugin-n": "^17.3.1",
    "eslint-plugin-perfectionist": "^2.10.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-regexp": "^2.5.0",
    "eslint-plugin-security": "^3.0.0",
    "eslint-plugin-sonarjs": "^0.25.1",
    "eslint-plugin-tailwindcss": "^3.15.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-unicorn": "^52.0.0",
    "eslint-plugin-vue": "^9.25.0",
    "eslint-plugin-vue-scoped-css": "^2.8.0",
    "eslint-plugin-vuejs-accessibility": "^2.3.0",
    "get-tsconfig": "^4.7.3",
    "globals": "^15.0.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "new-find-package-json": "^2.0.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.1",
    "vue-eslint-parser": "^9.4.2"
  },
  "devDependencies": {
    "@eslint/config-inspector": "0.4.7",
    "@swc/cli": "0.3.12",
    "@swc/core": "1.5.0",
    "@types/eslint": "8.56.10",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/eslint-plugin-markdown": "2.0.2",
    "@types/eslint__js": "8.42.3",
    "@types/lodash": "^4.17.0",
    "@types/node": "20.12.7",
    "concurrently": "8.2.2",
    "eslint": "9.1.1",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.14",
    "tsx": "4.7.3",
    "vue": "3.4.25"
  },
  "peerDependencies": {
    "eslint": "*"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": false
    }
  }
}
