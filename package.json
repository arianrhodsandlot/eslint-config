{
  "name": "@arianrhodsandlot/eslint-config",
  "description": "A set of predefined ESLint config.",
  "keywords": [
    "eslint",
    "eslint-config"
  ],
  "license": "MIT",
  "author": {
    "name": "arianrhodsandlot",
    "email": "theguidanceofawhitetower@gmail.com"
  },
  "type": "module",
  "exports": {
    "types": "./dist/types/index.d.ts",
    "import": "./dist/eslint-config.mjs",
    "require": "./dist/eslint-config.cjs"
  },
  "main": "dist/eslint-config.cjs",
  "module": "dist/eslint-config.mjs",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "conc npm:build:* -c auto",
    "build:cjs": "esbuild src/index.ts  --bundle --platform=node --packages=external --outfile=dist/eslint-config.cjs  --format=cjs",
    "build:esm": "esbuild src/index.ts  --bundle --platform=node --packages=external --outfile=dist/eslint-config.mjs  --format=esm",
    "build:types": "tsc",
    "dev": "eslint-config-inspector",
    "eslint": "eslint --no-warn-ignored",
    "lint": "node --run=eslint -- src",
    "prepare": "simple-git-hooks",
    "test": "node --test tests/*.test.ts",
    "test:update": "node --test-update-snapshots tests/*.test.ts"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && node --run=build"
  },
  "lint-staged": {
    "*.?(m|c)@(j|t)s?(x)": "node --run=eslint -- --fix",
    "package.json": "pnpx sort-package-json"
  },
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint-react/eslint-plugin": "^2.0.1",
    "@eslint/compat": "^1.4.0",
    "@eslint/config-helpers": "^0.4.0",
    "@eslint/css": "0.11.1",
    "@eslint/js": "^9.36.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.3.0",
    "@intlify/eslint-plugin-vue-i18n": "4.1.0",
    "@next/eslint-plugin-next": "^15.5.4",
    "@stylistic/eslint-plugin": "^5.4.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-diff": "^2.0.3",
    "eslint-plugin-es-x": "^9.1.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsdoc": "^60.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-vue": "^10.5.0",
    "eslint-plugin-vue-scoped-css": "^2.12.0",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "get-tsconfig": "^4.10.1",
    "globals": "^16.4.0",
    "lodash": "^4.17.21",
    "new-find-package-json": "^2.0.0",
    "prettier": "^3.6.2",
    "tailwind-csstree": "^0.1.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vue-eslint-parser": "^10.2.0"
  },
  "devDependencies": {
    "@arianrhodsandlot/release-kit": "0.1.11",
    "@eslint/config-inspector": "1.3.0",
    "@swc/cli": "0.7.8",
    "@swc/core": "1.13.20",
    "@types/eslint": "9.6.1",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/lodash": "4.17.20",
    "@types/node": "24.5.2",
    "@types/semver": "7.7.1",
    "concurrently": "9.2.1",
    "esbuild": "0.25.10",
    "eslint": "9.36.0",
    "jiti": "2.6.0",
    "keep-a-changelog": "2.7.1",
    "lint-staged": "16.2.1",
    "package-up": "5.0.0",
    "react": "19.1.1",
    "semver": "7.7.2",
    "simple-git-hooks": "2.13.1",
    "vue": "3.5.22",
    "vue-i18n": "11.1.12",
    "zx": "8.8.4"
  },
  "peerDependencies": {
    "eslint": "*"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": false
    }
  },
  "packageManager": "pnpm@10.17.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver"
    ]
  }
}
