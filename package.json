{
  "name": "@arianrhodsandlot/eslint-config",
  "description": "A set of predefined ESLint config.",
  "keywords": [
    "eslint",
    "eslint-config"
  ],
  "license": "MIT",
  "author": {
    "name": "arianrhodsandlot",
    "email": "theguidanceofawhitetower@gmail.com"
  },
  "type": "module",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/umd/index.cjs",
    "types": "./dist/types/index.d.ts"
  },
  "main": "dist/umd/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "conc npm:build:*",
    "build:esm": "swc src -d dist/esm --strip-leading-paths",
    "build:types": "tsc",
    "build:umd": "swc src -d dist/umd --strip-leading-paths -C module.type=umd --out-file-extension=cjs && node --experimental-strip-types scripts/fix-cjs-require.ts",
    "dev": "eslint-config-inspector",
    "eslint": "eslint --flag unstable_ts_config --no-warn-ignored",
    "lint": "node --run=eslint -- src",
    "prepare": "simple-git-hooks",
    "test": "node --no-warnings --experimental-strip-types --test tests/*.test.ts"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.?(m|c)@(j|t)s?(x)": "node --run=eslint -- --fix",
    "package.json": "pnpm dlx sort-package-json"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-package"
    ]
  },
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@eslint-react/eslint-plugin": "^1.22.1",
    "@eslint/compat": "^1.2.4",
    "@eslint/css": "^0.1.0",
    "@eslint/js": "^9.17.0",
    "@eslint/json": "^0.9.0",
    "@eslint/markdown": "^6.2.1",
    "@intlify/eslint-plugin-vue-i18n": "3.2.0",
    "@next/eslint-plugin-next": "^15.1.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-diff": "^2.0.3",
    "eslint-plugin-es-x": "^8.4.1",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-jsdoc": "^50.6.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-perfectionist": "^4.4.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unicorn": "^56.0.1",
    "eslint-plugin-vue": "^9.32.0",
    "eslint-plugin-vue-scoped-css": "^2.9.0",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "get-tsconfig": "^4.8.1",
    "globals": "^15.14.0",
    "lodash": "^4.17.21",
    "new-find-package-json": "^2.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vue-eslint-parser": "^9.4.3"
  },
  "devDependencies": {
    "@arianrhodsandlot/release-kit": "0.1.4",
    "@eslint/config-inspector": "0.6.0",
    "@swc/cli": "0.5.2",
    "@swc/core": "1.10.4",
    "@types/eslint": "9.6.1",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/eslint__js": "8.42.3",
    "@types/lodash": "4.17.13",
    "@types/node": "22.10.2",
    "@types/semver": "7.5.8",
    "concurrently": "9.1.1",
    "eslint": "9.17.0",
    "jiti": "2.4.2",
    "keep-a-changelog": "2.5.3",
    "lint-staged": "15.3.0",
    "package-up": "5.0.0",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "0.6.9",
    "react": "19.0.0",
    "semver": "7.6.3",
    "simple-git-hooks": "2.11.1",
    "vue": "3.5.13",
    "vue-i18n": "11.0.1",
    "zx": "8.3.0"
  },
  "peerDependencies": {
    "eslint": "*"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": false
    }
  },
  "packageManager": "pnpm@9.15.2"
}
