{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "lib": ["es2023"],
    "module": "node16",
    "moduleResolution": "node16",
    "noImplicitAny": false,
    "outDir": "dist/types",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022"
  },
  "exclude": ["eslint.config.mjs", "dist", "tests"],
  "include": ["src"]
}
